<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Solde Beauty Skincare Products</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">
    <!-- Header Section -->
    <header class="bg-gradient-to-r from-pink-500 to-purple-500 text-white p-6 shadow-md">
        <div class="container mx-auto text-center">
            <h1 class="text-4xl font-bold">Our Skincare Products</h1>
            <p class="mt-2 text-lg">Discover the best for your skin at Solde Beauty Skincare.</p>
            <nav class="mt-4">
                <a href="/" class="text-white bg-purple-600 hover:bg-purple-700 px-4 py-2 rounded-lg shadow-md mr-4">
                    Home
                </a>
                <a href="/add-product" class="text-white bg-pink-600 hover:bg-pink-700 px-4 py-2 rounded-lg shadow-md">
                    Add Product
                </a>
            </nav>
        </div>
    </header>

    <!-- Product Profile Section -->
    <main class="container mx-auto mt-8">
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-2xl font-semibold text-gray-800 mb-4">Product List</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% if (products && products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <div class="bg-gray-50 p-4 rounded-lg shadow-md hover:shadow-lg transition duration-300">
                            <img src="<%= product.image || '/public/default-image.jpg' %>"
                                    alt="<%= product.name %>"
                                    class="w-full h-48 object-cover rounded-lg mb-4">
                            <h3 class="text-lg font-semibold text-gray-700"><%= product.name %></h3>
                            <p class="text-sm text-gray-500">Brand: <%= product.brand %></p>
                            <p class="text-sm text-gray-500">Category: <%= product.category %></p>
                            <p class="text-lg font-bold text-pink-600 mt-2">$<%= product.price.toFixed(2) %></p>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="col-span-full text-center text-gray-500 py-4">
                        No products found. Add some products to display here.
                    </div>
                <% } %>
            </div>
        </div>
    </main>
</body>
</html>
